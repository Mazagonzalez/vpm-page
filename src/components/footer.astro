---
import IconVpmWhite from "@/components/icons/icon-vpm-white.astro";
import IconFacebook from "@/components/icons/icon-facebook.astro";
import IconInstagram from "@/components/icons/icon-instagram.astro";
import IconLinkedin from "@/components/icons/icon-linkedin.astro";
import IconFigure from "@/components/icons/icon-figure.astro";
---

<footer class="pt-[70px] pb-[35px] bg-main text-white">
    <div class="size-screen flex flex-col lg:flex-row justify-between">
        <div class="col items-center lg:items-start gap-7 lg:gap-[34px]">
            <IconVpmWhite />

            <div class="row gap-3 lg:gap-5 items-center">
                <a href="" target="_blank">
                    <IconFacebook class="size-6 lg:size-5 icon" />
                </a>

                <a href="" target="_blank">
                    <IconInstagram class="size-6 lg:size-5 icon" />
                </a>

                <a href="" target="_blank">
                    <IconLinkedin class="size-6 lg:size-5 icon" />
                </a>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row items-center lg:items-start gap-[170px]">
            <div class="hidden lg:block">
                <IconFigure />
            </div>

            <div class="col text-center lg:text-start gap-8 lg:gap-16 mt-[38px]">
                <div class="col gap-1.5 lg:gap-2.5">
                    <h3 class="text-lg font-medium">Locación</h3>
                    <h2 class="text-2xl font-medium">Carrera 7 # 116 - 50</h2>
                </div>

                <div class="col gap-1.5 lg:gap-2.5">
                    <h3 class="text-lg font-medium">Contacto</h3>
                    <h2 class="text-2xl font-medium hover:underline">
                        <a href="mailto:viviana@vmp-tech.com">viviana@vmp-tech.com</a>
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <p class="size-screen mt-8 lg:mt-2.5 text-center lg:text-start">
        © 2025 VMP Tech. All rights reserved.
    </p>
</footer>